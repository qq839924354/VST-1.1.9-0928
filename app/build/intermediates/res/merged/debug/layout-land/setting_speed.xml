<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <Button
        android:id="@+id/setting_speed_source"
        android:layout_width="200dip"
        android:layout_height="50dip"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/video_details_btn_selector"
        android:text="开始资源测速"
        android:textColor="@color/detail_point"
        android:textSize="24dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/source_iqiyi_focus" />

        <ProgressBar
            android:id="@+id/down_pb1"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="500dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_layer" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="等待测试……"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/source_letv_focus" />

        <ProgressBar
            android:id="@+id/down_pb2"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="500dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_layer" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="等待测试……"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/source_qq_focus" />

        <ProgressBar
            android:id="@+id/down_pb3"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="500dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_layer" />

        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="等待测试……"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="140dp"
            android:layout_height="60dp"
            android:scaleType="fitCenter"
            android:src="@drawable/source_xunleilx_focus" />

        <ProgressBar
            android:id="@+id/down_pb4"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="500dp"
            android:layout_height="8dp"
            android:layout_gravity="center_vertical"
            android:background="@null"
            android:max="100"
            android:progressDrawable="@drawable/progressbar_layer" />

        <TextView
            android:id="@+id/tv4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:text="等待测试……"
            android:textColor="@color/white"
            android:textSize="20dp" />
    </LinearLayout>

    <TextView
        android:id="@+id/bottomtv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="测试过程中，请稍候……"
        android:textColor="@color/white"
        android:textSize="24dp"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/ssim1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/source_iqiyi_focus"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ssim2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/source_letv_focus"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ssim3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/source_qq_focus"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/ssim4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/source_xunleilx_focus"
            android:visibility="gone" />
    </LinearLayout>

